<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色值 -->
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#ff4A4A4A"
                android:dashGap="3dp"
                android:dashWidth="8dp"/><!--下划线颜色-->
        </shape>
    </item>
    <item android:bottom="1px"> <!--下划线厚度-->
        <shape>
            <stroke
                android:width="1dp"
                android:color="#ffffff"
                android:dashGap="3dp"
                android:dashWidth="8dp"/><!--背景色 不能透明否则会显示上面的下划线颜色-->
        </shape>
    </item>
</layer-list>